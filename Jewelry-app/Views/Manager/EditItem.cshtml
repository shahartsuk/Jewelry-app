@model Jewelry_app.ViewModels.Manager.VMEditItem

@{
    ViewData["Title"] = "EditItem";
}

<h1>EditItem</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditItem" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.Name" class="control-label"></label>
                <input @*value="@Model.Item.Name"*@ asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.Description" class="control-label"></label>
                <input @*value="@Model.Item.Description"*@ asp-for="Item.Description" class="form-control" />
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div> 
            <div id="addPrice" class="row" style="display:none">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Price.MyPrice" class="control-label"></label>
                    <input asp-for="Price.MyPrice" class="form-control" />
                    <span asp-validation-for="Price.MyPrice" class="text-danger"></span>
                </div>
                 <div class="form-group">
                   <label asp-for="Price.Start" class="control-label"></label>
                    <input asp-for="Price.Start" class="form-control" />
                    <span asp-validation-for="Price.Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price.StartTime" class="control-label"></label>
                    <input asp-for="Price.StartTime" class="form-control" />
                    <span asp-validation-for="Price.StartTime" class="text-danger"></span>
                </div>
                 <div class="form-group">
                  <label asp-for="Price.StartDate" class="control-label"></label>
                    <input asp-for="Price.StartDate" class="form-control" />
                    <span asp-validation-for="Price.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price.End" class="control-label"></label>
                    <input asp-for="Price.End" class="form-control" />
                    <span asp-validation-for="Price.End" class="text-danger"></span>
                </div>
                <div id="addImage" class="row" style="display:none">
                 <div class="form-group">
                    <label asp-for="File" class="control-label"></label>
                    <input asp-for="File" type="file" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
            </div>
            </div>
                <div class="form-group">
                    <input type="submit" value="עדכון תכשיט" class="btn btn-primary" />
                </div>
                </div>
        </form>
        <button class="btn btn-primary" onclick="addImage()">הוספת תמונה</button>
        <button class="btn btn-primary" onclick="addPrice()">הוספת מחיר</button>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
