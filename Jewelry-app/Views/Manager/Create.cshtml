@model Jewelry_app.ViewModels.Manager.VMCreateGroup

@{
    ViewData["Title"] = "Create";
}

<h1>הוספף קבוצה</h1>

<h4>בהצלחה</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ParentID" class="control-label"></label>
                <select asp-for="ParentID" class="form-control">
                    @if(Model.Groups.Count >0)
                    {
                        @foreach (Group group in Model.Groups)
                        {
                            if (group.ID == Model.ParentID)
                            {
                                <option value="@group.ID" selected>@group.Name</option>
                            }
                            else
                            {
                                <option value="@group.ID">@group.Name</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="ParentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Name" class="control-label"></label>
                <input asp-for="Group.Name" class="form-control" />
                <span asp-validation-for="Group.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Group.Description" class="control-label"></label>
                <input asp-for="Group.Description" class="form-control" />
                <span asp-validation-for="Group.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileGroup" class="control-label"></label>
                <input asp-for="FileGroup" type="file" class="form-control" />
                <span asp-validation-for="FileGroup" class="text-danger"></span>
            </div>
                <button class="btn btn-primary" onclick="addItem()">הוספת פריט</button>
            <input type="submit" value="הוספת תת קבוצה" class="btn btn-primary" />
        <div id="addItem" class="row" style="display:none">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Item.ID" class="control-label"></label>
                    <input asp-for="Item.ID" class="form-control" />
                    <span asp-validation-for="Item.ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.Name" class="control-label"></label>
                    <input asp-for="Item.Name" class="form-control" />
                    <span asp-validation-for="Item.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Item.Description" class="control-label"></label>
                    <input asp-for="Item.Description" class="form-control" />
                    <span asp-validation-for="Item.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price.MyPrice" class="control-label"></label>
                    <input asp-for="Price.MyPrice" class="form-control" />
                    <span asp-validation-for="Price.MyPrice" class="text-danger"></span>
                </div>
                 <div class="form-group">
                   <label asp-for="Price.Start" class="control-label"></label>
                    <input asp-for="Price.Start" class="form-control" />
                    <span asp-validation-for="Price.Start" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price.StartTime" class="control-label"></label>
                    <input asp-for="Price.StartTime" class="form-control" />
                    <span asp-validation-for="Price.StartTime" class="text-danger"></span>
                </div>
                 <div class="form-group">
                  <label asp-for="Price.StartDate" class="control-label"></label>
                    <input asp-for="Price.StartDate" class="form-control" />
                    <span asp-validation-for="Price.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price.End" class="control-label"></label>
                    <input asp-for="Price.End" class="form-control" />
                    <span asp-validation-for="Price.End" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="FileItem" class="control-label"></label>
                    <input asp-for="FileItem" type="file" class="form-control" />
                    <span asp-validation-for="FileItem" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <input type="submit" value="הוספת תת קבוצה" class="btn btn-primary" />
                </div>
        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
